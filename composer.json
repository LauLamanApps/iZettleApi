{
  "name": "laulamanapps/izettle-api",
  "description": "Izettle API PHP Client",
  "license": "MIT",
  "authors": [
    {
      "name": "Laurens Laman",
      "email": "laurens.laman@llaman.nl"
    }
  ],
  "autoload": {
    "psr-4": {
      "LauLamanApps\\IzettleApi\\": ["src/"]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LauLamanApps\\IzettleApi\\Tests\\": ["tests/"]
    }
  },
  "require": {
    "php": "^8.1",
    "guzzlehttp/guzzle": "^6.3",
    "moneyphp/money": "^3.0",
    "ramsey/uuid": "^3.7 || ^4.0",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.3",
    "mockery/mockery": "^1.0",
    "friendsofphp/php-cs-fixer": "^3.9"
  },
  "scripts": {
    "test": "phpunit",
    "test-unit": "phpunit --testsuite unit",
    "test-integration": "phpunit --testsuite integration",
    "test-coverage": [
      "rm -rf coverage || true",
      "phpunit --coverage-html=coverage/ --coverage-clover=coverage/clover.xml"
    ],
    "format": "php-cs-fixer fix --verbose"
  },
  "scripts-descriptions": {
    "test": "Run all unit and integration tests",
    "test-unit": "Run unit tests",
    "test-integration": "Run integration tests",
    "test-coverage": "Run unit and integration tests and generate coverage report",
    "format": "Run php-cs-fixer to fix the code formatting"
  }
}
